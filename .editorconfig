# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,cc,cpp,cxx,h,hpp,hxx}]
indent_size = 4

[*.json]
indent_size = 2

[*.tf]
indent_size = 2

[*.vue]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
